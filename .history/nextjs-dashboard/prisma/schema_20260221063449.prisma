generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
}

model Loan {
  id        Int      @id @default(autoincrement())
  memberId  Int
  amount    Float
  duration  Int
  interest  Float
  createdAt DateTime @default(now())
}

model Interest {
  id       Int      @id @default(autoincrement())
  loanId   Int
  rate     Float
  createdAt DateTime @default(now())
}